!!! 5
%html{:lang => locale}
  %head
    %meta{:charset=>"utf-8"}
    %meta{:"http-equiv"=>"X-UA-Compatible",:content=>"IE=edge,chrome=1"}

    %title= t('title')
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags 
  
    = yield :head
  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          .brand= "MyPhoto"
          %ul.nav
            %li.active= link_to "home", root_path
            %li= link_to "link"
          %ul.nav.pull-right
            - if user_signed_in?
              %li= link_to '注销', destroy_user_session_path, :method => :delete
            - else
              %li= link_to '登陆', new_user_session_path
    .container{:style => "height: 2000px;"}
      = yield 

